<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/bg_gradual_change_style"
        android:layout_weight="1.1">

        <TextView
            android:id="@+id/tvMyAddressKey"
            style="@style/black_text_style"
            android:layout_marginTop="@dimen/d16"
            android:text="@string/my_account_address" />

        <ImageButton
            android:id="@+id/ib_copy"
            android:layout_width="@dimen/d12"
            android:layout_height="@dimen/d12"
            android:layout_alignBottom="@+id/tvMyAddressKey"
            android:layout_alignParentRight="true"
            android:background="@color/grey_a7"
            android:padding="@dimen/d10" />

        <TextView
            android:id="@+id/tvMyAccountAddressValue"
            style="@style/black_text_style"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginTop="@dimen/d16"
            android:layout_toLeftOf="@+id/ib_copy"
            android:layout_toRightOf="@+id/tvMyAddressKey"
            android:gravity="center|right"
            android:textColor="@color/value_black70" />


        <TextView
            android:id="@+id/tvCurrencyKey"
            style="@style/black_text_style"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tvMyAddressKey"
            android:layout_marginTop="@dimen/d16"
            android:text="@string/currency" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvCurrencyKey"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvMyAddressKey"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginTop="@dimen/d2"
            android:layout_toRightOf="@+id/tvCurrencyKey"
            android:gravity="bottom|right"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_spinner"
                android:dropDownHorizontalOffset="-10dp"
                android:dropDownVerticalOffset="@dimen/d1"
                android:gravity="left|center"
                android:minWidth="@dimen/d70"
                android:padding="@dimen/d1"
                android:popupBackground="@color/transparent"
                android:spinnerMode="dropdown" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvBalanceKey"
            style="@style/black_text_style"
            android:layout_below="@+id/tvCurrencyKey"
            android:layout_marginTop="@dimen/d16"
            android:text="@string/account_balance" />

        <TextView
            android:id="@+id/tvBalance"
            style="@style/black_text_style"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvCurrencyKey"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginTop="@dimen/d16"
            android:layout_toRightOf="@+id/tvBalanceKey"
            android:gravity="center|right"
            android:textColor="@color/orange_yellow"
            tools:text="0" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_transaction"
        style="@style/bg_white_style"
        android:layout_marginTop="@dimen/d35"
        android:layout_weight="3"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            style="@style/black_text_style"
            android:layout_marginTop="@dimen/d16"
            android:text="@string/pending_transaction" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPendingTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d8"
            android:scrollbars="none"
            tools:listitem="@layout/item_transaction" />
    </LinearLayout>


</LinearLayout>