<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_setting_types"
    android:layout_width="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:layout_height="@dimen/d48">

    <TextView
        android:id="@+id/tv_setting_type"
        style="@style/black_16_text_style"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginRight="@dimen/d5"
        android:layout_toLeftOf="@+id/ib_detail"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:drawableLeft="@mipmap/icon_check_wallet_info"
        android:drawablePadding="@dimen/d16"
        android:gravity="center_vertical"
        android:textColor="@color/black22" />

    <ImageButton
        android:id="@+id/ib_detail"
        android:layout_width="@dimen/d16"
        android:layout_centerVertical="true"
        android:layout_height="@dimen/d16"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/d12"
        android:background="@color/transparent"
        android:src="@mipmap/icon_detail" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:layout_alignParentBottom="true"
        android:background="@color/black10_1d2124" />

</RelativeLayout>