<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_guide"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="right"
              android:gravity="center"
              android:orientation="vertical">


    <ImageView
            android:id="@+id/iv_gesture"
            android:layout_width="@dimen/d80"
            android:layout_height="@dimen/d50"
            android:layout_marginTop="@dimen/d20"
            android:src="@drawable/icon_help_arrow_one"/>

    <TextView
            android:id="@+id/tv_content"
            android:layout_width="@dimen/d250"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/d10"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/d3"
            android:text="@string/touch_copy_your_wallet_address"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15"/>

    <Button
            android:id="@+id/btn_next"
            android:layout_width="@dimen/d110"
            android:layout_height="@dimen/d35"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/d30"
            android:background="@drawable/bg_white_stroke"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15"/>
</LinearLayout>