<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d70"
                android:gravity="center_vertical"
                android:id="@+id/rl_toast"
                android:background="@drawable/bg_grey_with_shadow"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/transparent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/toast_iv">
        <TextView
                android:id="@+id/toast_title"
                style="@style/black_14_text_style"
                android:background="@color/transparent"
                android:ellipsize="end"/>

        <TextView
                android:id="@+id/toast_content"
                style="@style/black_14_text_style"
                android:background="@color/transparent"
                android:ellipsize="end"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/toast_iv"
            android:layout_width="@dimen/d32"
            android:layout_margin="@dimen/d10"
            android:layout_height="@dimen/d32"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"/>
</RelativeLayout>
