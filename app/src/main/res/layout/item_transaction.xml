<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/d8"
    android:paddingBottom="@dimen/d8"
    android:id="@+id/ll_item_transaction"
    android:orientation="horizontal">

    <io.bcaas.view.textview.BcaasBalanceTextView
        android:id="@+id/bbt_amount"
        style="@style/black70_14_single_text_style"
        android:layout_width="@dimen/d0"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="left|center_vertical" />

    <TextView
        android:id="@+id/tv_block_service"
        style="@style/black70_14_single_text_style"
        android:layout_width="@dimen/d55"
        android:layout_marginLeft="@dimen/d5"
        android:gravity="center_vertical|left"
        android:text="@string/receive" />

    <TextView
        android:id="@+id/tv_account_address"
        style="@style/black70_13_single_text_style"
        android:layout_width="@dimen/d0"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:gravity="right|center_vertical" />


</LinearLayout>