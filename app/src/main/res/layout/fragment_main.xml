<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/bg_gradual_change_style"
        android:layout_marginTop="@dimen/d20"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_address_key"
            style="@style/black_text_style"
            android:layout_marginTop="@dimen/d16"
            android:text="@string/my_account_address" />

        <ImageButton
            android:id="@+id/ib_copy"
            android:layout_width="@dimen/d12"
            android:layout_height="@dimen/d12"
            android:layout_alignBottom="@+id/tv_address_key"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_copy" />

        <TextView
            android:id="@+id/tv_account_address_value"
            style="@style/address_text_style"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginTop="@dimen/d16"
            android:layout_toLeftOf="@+id/ib_copy"
            android:layout_toRightOf="@+id/tv_address_key"
            android:gravity="center|right"
            android:textColor="@color/value_black70" />


        <TextView
            android:id="@+id/tv_currency_key"
            style="@style/black_text_style"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_address_key"
            android:layout_marginTop="@dimen/d16"
            android:text="@string/currency" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_currency_key"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_address_key"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginTop="@dimen/d16"
            android:layout_toRightOf="@+id/tv_currency_key"
            android:gravity="bottom|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_currency"
                style="@style/black_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/d5"
                android:drawableRight="@mipmap/icon_dropdown"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_balance_key"
            style="@style/black_text_style"
            android:layout_marginBottom="@dimen/d16"
            android:layout_below="@+id/tv_currency_key"
            android:layout_marginTop="@dimen/d16"
            android:text="@string/account_balance" />

        <TextView
            android:id="@+id/tv_balance"
            style="@style/black_text_style"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_currency_key"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginTop="@dimen/d16"
            android:gravity="center|right"
            android:textColor="@color/orange_yellow"
            tools:text="0" />

        <ProgressBar
            android:id="@+id/pb_balance"
            android:layout_width="@dimen/d20"
            android:layout_height="@dimen/d20"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_currency_key"
            android:layout_marginRight="@dimen/d5"
            android:layout_marginTop="@dimen/d16"
            android:gravity="center|right"
            android:indeterminateTint="@color/orange_yellow"
            android:visibility="gone" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_transaction"
        style="@style/bg_white_style"
        android:layout_marginBottom="@dimen/d16"
        android:layout_marginTop="@dimen/d35"
        android:layout_weight="3"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            style="@style/black_text_style"
            android:layout_marginTop="@dimen/d16" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPendingTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d8"
            android:scrollbars="none"
            tools:listitem="@layout/item_transaction" />
    </LinearLayout>


</LinearLayout>