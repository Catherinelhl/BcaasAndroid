<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_language_switch"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d48"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_language"
        style="@style/black_14_text_style"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/d10"
        android:layout_marginLeft="@dimen/d22"
        android:layout_marginTop="@dimen/d10"
        android:background="@color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/d34" />

    <Button
        android:id="@+id/btn_choose"
        android:layout_width="@dimen/d20"
        android:layout_height="@dimen/d20"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d12"
        android:background="@mipmap/icon_choose" />

    <View
        style="@style/line_style"
        android:layout_alignParentBottom="true" />

</RelativeLayout>