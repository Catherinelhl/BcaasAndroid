<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_guide"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:gravity="left"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_gesture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_help_gesture" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="@dimen/d200"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/d20"
        android:gravity="center"
        android:text="@string/touch_can_create_new_wallet"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="@dimen/d110"
        android:layout_height="@dimen/d35"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/d30"
        android:background="@drawable/bg_white_stroke"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15" />
</LinearLayout>