<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- android:radius 弧形的半径 -->
    <corners android:radius="@dimen/d6" />
    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:bottom="@dimen/d2"
        android:left="@dimen/d10"
        android:right="@dimen/d10"
        android:top="@dimen/d2" />

    <gradient
        android:angle="180"
        android:endColor="@color/gradual_change_end"
        android:startColor="@color/gradual_change_start" />

    <corners
        android:bottomLeftRadius="5dip"
        android:bottomRightRadius="5dip"
        android:topLeftRadius="5dip"
        android:topRightRadius="5dip" />

</shape>