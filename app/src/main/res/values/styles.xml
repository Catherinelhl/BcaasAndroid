<resources>


    <!-- 用上面的一种主题竟然-->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bcaas_color</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="dialog_loading" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="marquee_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="marquee_middle_style">
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="bg_white_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d0</item>
        <item name="android:layout_marginLeft">@dimen/d10</item>
        <item name="android:layout_marginRight">@dimen/d10</item>
        <item name="android:layout_marginTop">@dimen/d20</item>
        <item name="android:background">@drawable/bg_white</item>
        <item name="android:paddingLeft">@dimen/d12</item>
        <item name="android:paddingRight">@dimen/d12</item>

    </style>

    <style name="bg_grey_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d0</item>
        <item name="android:layout_marginLeft">@dimen/d2</item>
        <item name="android:layout_marginRight">@dimen/d2</item>
        <item name="android:layout_marginTop">@dimen/d20</item>
        <item name="android:background">@drawable/bg_grey</item>
        <item name="android:paddingLeft">@dimen/d2</item>
        <item name="android:paddingRight">@dimen/d2</item>

    </style>

    <style name="bg_gradual_change_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d0</item>
        <item name="android:layout_marginLeft">@dimen/d10</item>
        <item name="android:layout_marginRight">@dimen/d10</item>
        <item name="android:paddingLeft">@dimen/d12</item>
        <item name="android:paddingRight">@dimen/d12</item>
        <item name="android:background">@drawable/bg_gradual_change</item>
    </style>


