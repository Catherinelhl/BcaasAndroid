<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d48"
    android:background="@color/transparent"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="@dimen/d126"
        android:layout_height="@dimen/d37"
        android:background="@color/transparent"
        android:src="@mipmap/tv_bcaasc_logo_small" />

    <io.bcaas.view.textview.TVTextView
        android:id="@+id/tv_title"
        style="@style/tv_white_24_text_style"
        android:layout_centerInParent="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center" />


    <TextView
        android:id="@+id/tv_current_time"
        style="@style/tv_white_18_text_style"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d74"
        android:layout_toLeftOf="@+id/ib_right" />

    <ImageButton
        android:id="@+id/ib_right"
        android:layout_width="@dimen/d23"
        android:layout_height="@dimen/d23"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@mipmap/tv_icon_language_switch" />

    <TextView
        android:id="@+id/tv_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d20"
        android:layout_toLeftOf="@+id/tv_title"
        android:background="@color/orange_FC9003"
        android:padding="@dimen/d5"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold"
        android:visibility="gone" />
</RelativeLayout>