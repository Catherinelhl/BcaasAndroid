<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_private_key"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/d20"
    android:layout_marginRight="@dimen/d20"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_private_key"
            style="@style/tv_login_edit_text_style"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d5"
            android:layout_toLeftOf="@+id/cb_private_key"
            android:background="@color/transparent"
            android:drawablePadding="@dimen/d10"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <CheckBox
            android:id="@+id/cb_private_key"
            android:layout_width="@dimen/d15"
            android:layout_height="@dimen/d15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:button="@drawable/tv_selector_cb_password"
            android:gravity="center" />
    </RelativeLayout>

    <View
        android:id="@+id/v_password_line"
        style="@style/tv_line_style" />
</LinearLayout>
